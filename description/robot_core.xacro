<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro"  name="robot">

    <xacro:include filename="inertial_macros.xacro" />

    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.3 1" />
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1" />
    </material>

    <material name="black">
        <color rgba="0 0 0 1" />
    </material>


    <material name="red">
        <color rgba="1 0 0 1" />
    </material>


    <link name="base_link">

    </link>

    <joint name="chassis_joint" type="fixed"> 
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.7305 0 0"/>
    </joint>

    <link name="chassis">
        <visual>
        <origin xyz="1.0225 0 0.254"/>
            <geometry>
                <box size="0.635 0.584 0.508"/>
            </geometry>
            <material name="white"/>
        </visual>
         
         <!-- <collision>
            <origin xyz="0.7305 0 0.31115"/>
            <geometry>
