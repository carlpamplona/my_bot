            </geometry>  
        </collision>

        <xacro:inertial_box mass="0.5" x="0.3" y="0.5" z="0.15">
                <origin xyz="0.15 0 0.075" rpy="0 0 0"/>
        </xacro:inertial_box> -->


    </link>

    <joint name="component_joint" type="fixed"> 
        <parent link="chassis"/>
        <child link="component"/>
        <origin xyz="0 0 0.5842"/>
    </joint>

    <link name="component">
        <visual>
        <origin xyz="1.0225 0 0"/>
            <geometry>
                <box size="0.635 0.584 0.1524"/>
            </geometry>
            <material name="blue"/>
        </visual>
         
         <!-- <collision>
            <origin xyz="0.7305 0 0.31115"/>
